@using DemoApplication.Areas.Client.ViewModels.Account
@model UserViewModel

<form method="post" asp-route="client-account-details">
	<div class="row">
		<div class="col-lg-6 col-12  mb--30">
			<input asp-for="FirstName" id="first-name" placeholder="First Name">
		</div>
		<div class="col-lg-6 col-12  mb--30">
			<input asp-for="LastName" id="last-name" placeholder="Last Name">
		</div>
		<div class="col-12  mb--30">
			<input readonly asp-for="Email" id="email" placeholder="Email Address">
		</div>
		<div class="col-12 mb-3">
			<button type="submit" class="btn btn--primary">Save Changes</button>
		</div>
	</div>
</form>
